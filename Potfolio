  <script>
    /* ========= Smooth Scroll (Lenis) ========= */
    const lenis = new Lenis({ duration: 1.15, smoothWheel: true });
    function raf(time){ lenis.raf(time); requestAnimationFrame(raf); } requestAnimationFrame(raf);

    /* ========= Custom Cursor ========= */
    const cursor = document.getElementById('cursor');
    window.addEventListener('mousemove', e=>{ cursor.style.top=e.clientY+'px'; cursor.style.left=e.clientX+'px'; });
    document.querySelectorAll('a,.btn,.card').forEach(el=>{
      el.addEventListener('mouseenter',()=>cursor.classList.add('cursor--link'));
      el.addEventListener('mouseleave',()=>cursor.classList.remove('cursor--link'));
    });

    /* ========= Typed.js ========= */
    new Typed('#typed', {
      strings:[
        'Sinh vi√™n CNTT t·∫°i FPTU',
        'YouTuber chia s·∫ª ki·∫øn th·ª©c',
        'Mentor c·ªông ƒë·ªìng l·∫≠p tr√¨nh > 1000',
        'S√°ng t·∫°o ‚Ä¢ H·ªçc h·ªèi ‚Ä¢ Trao gi√° tr·ªã'
      ], typeSpeed:60, backSpeed:28, backDelay:1200, loop:true
    });

    /* ========= GSAP Animations ========= */
    gsap.from('.brand',{y:-20,opacity:0,duration:.8,ease:'power3.out'});
    gsap.from('nav a',{y:-20,opacity:0,duration:.6,stagger:.08,delay:.1,ease:'power3.out'});
    gsap.from('#hero .badge',{y:20,opacity:0,duration:.6,delay:.2,ease:'power3.out'});
    gsap.from('#hero .title',{y:20,opacity:0,duration:.8,delay:.3,ease:'power3.out'});
    gsap.from('#hero .typed-wrap',{y:20,opacity:0,duration:.8,delay:.4,ease:'power3.out'});
    gsap.from('#hero .desc',{y:20,opacity:0,duration:.8,delay:.5,ease:'power3.out'});
    gsap.from('#hero .cta-row .btn',{y:10,opacity:0,duration:.6,delay:.55,stagger:.07,ease:'power3.out'});

    gsap.utils.toArray('section.content').forEach(sec=>{
      gsap.from(sec.querySelector('.sec-title'),{scrollTrigger:{trigger:sec,start:'top 80%'},y:20,opacity:0,duration:.8,ease:'power3.out'});
      gsap.from(sec.querySelectorAll('.muted,.grid .card,.terminal'),{scrollTrigger:{trigger:sec,start:'top 78%'},y:16,opacity:0,duration:.7,stagger:.08,ease:'power3.out'});
    });

    /* ========= Vanilla Tilt for cards ========= */
    VanillaTilt.init(document.querySelectorAll('[data-tilt]'), { max: 8, speed: 400, glare: true, 'max-glare': .25 });

    /* ========= Three.js Particles Background ========= */
    const canvas = document.getElementById('bg');
    const renderer = new THREE.WebGLRenderer({ canvas, antialias:true, alpha:true });
    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(60, innerWidth/innerHeight, .1, 1000); camera.position.z = 8;
    function resize(){ renderer.setSize(innerWidth, innerHeight); renderer.setPixelRatio(Math.min(2, devicePixelRatio||1)); camera.aspect = innerWidth/innerHeight; camera.updateProjectionMatrix(); }
    addEventListener('resize', resize); resize();

    const count = 1500; const positions = new Float32Array(count*3); const speeds = new Float32Array(count);
    for(let i=0;i<count;i++){ const ix=i*3; positions[ix]=(Math.random()-.5)*18; positions[ix+1]=(Math.random()-.5)*10; positions[ix+2]=(Math.random()-.5)*14; speeds[i]=.002+Math.random()*.006; }
    const geo = new THREE.BufferGeometry(); geo.setAttribute('position', new THREE.BufferAttribute(positions,3));
    const mat = new THREE.PointsMaterial({ color:0x79f8e5, size:.03, transparent:true, opacity:.75 });
    const points = new THREE.Points(geo, mat); scene.add(points);

    let t=0; function animate(){ requestAnimationFrame(animate); t+=.003; const pos=points.geometry.attributes.position.array; for(let i=0;i<count;i++){ const ix=i*3; pos[ix+1]+=Math.sin(t+i)*speeds[i]*.05; pos[ix]+=Math.cos(t*.9+i)*speeds[i]*.03; } points.geometry.attributes.position.needsUpdate=true; points.rotation.y+=.0009; points.rotation.x+=.0004; renderer.render(scene,camera);} animate();
    addEventListener('mousemove', e=>{ const x=(e.clientX/innerWidth)-.5; const y=(e.clientY/innerHeight)-.5; gsap.to(camera.position,{x:x*.8,y:-y*.6,duration:.6,ease:'power2.out'}) });

    /* ========= Fake Terminal (live typing) ========= */
    const term = document.getElementById('term');
    const script = [
      '$ gcc hello.c -o hello',
      '$ ./hello',
      'Hello, World! üëã',
      '$ javac Main.java && java Main',
      'Xin ch√†o t·ª´ Java! ‚òï',
      '$ node app.js',
      'Server running at http://localhost:3000',
      '$ mysql -u root -p',
      'SELECT COUNT(*) FROM students; -- 1000+ members',
      '$ echo "Create value ‚Ä¢ Learn ‚Ä¢ Share"',
    ];
    let i=0; function typeLine(){ if(i>=script.length){ i=0; term.innerHTML=''; } const el=document.createElement('div'); el.className='line'; term.appendChild(el); let txt=script[i]; let j=0; const iv=setInterval(()=>{ el.textContent = txt.slice(0, j++) + (j%2?'':'_'); if(j>txt.length){ clearInterval(iv); i++; setTimeout(typeLine, 500); } term.scrollTop = term.scrollHeight; }, 18); }
    typeLine();
  </script>
